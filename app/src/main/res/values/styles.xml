<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
     <!--   <item name="radioButtonStyle"> @style/Widget.MaterialComponents.CompoundButton.RadioButton</item> -->

    </style>
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:colorControlNormal">@color/color</item>

    </style>

    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <!-- color of radio button -->
        <item name="colorPrimaryDark">@color/color</item>
        <!-- default color of radio button -->
        <item name="android:textColorPrimary">@android:color/darker_gray</item>

    </style>
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="colorPrimaryDark">@color/color</item>
        <!-- default color of radio button -->
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
    </style>

    <style name="AppThemeNoAction"  parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/color</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="colorControlNormal">@color/white</item>
    <item name="android:colorControlNormal">@color/color</item>
    </style>
</resources>
