<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ui.home.Call_Isolation">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/color"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="40dp">
<TextView
    android:id="@+id/id1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:textColor="@color/white"
    android:textSize="18sp"
    android:text="ارقام التواصل"/>
    </LinearLayout>
    <TextView
        android:padding="20dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/id2"
        android:layout_height="wrap_content"
        android:text="ولاية الخرطوم"
        android:textSize="18sp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/layout_kh"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/total2"
            android:background="@drawable/ic_call_black_24dp"/>
        <TextView
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  221"
            android:gravity="center"
            android:id="@+id/id3"
            android:textColor="@color/color"
            android:textSize="18dp"
            />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:background="@color/total1"
        android:layout_marginTop="5dp"
        android:layout_height="0.5dp"/>
    <TextView
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/id4"
        android:textSize="18sp"
        android:text="كافة الولايات"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/layout_su"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginRight="50dp"
            android:backgroundTint="@color/total2"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_call_black_24dp"/>
        <TextView
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9090"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/color"
            android:id="@+id/id5"
            />
    </LinearLayout>
</LinearLayout>