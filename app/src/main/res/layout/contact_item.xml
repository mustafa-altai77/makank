<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:stateListAnimator="@anim/animation"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/color"></LinearLayout>

                <TextView
                    android:id="@+id/full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="2dp"
                    android:paddingRight="10dp"
                    android:text="عبدالرحمن سيد عبدالله"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/status_mg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="290dp"
                    android:background="@drawable/recover" />

                <TextView
                    android:id="@+id/status_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="245dp"
                    android:text="سليم"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/person_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/full_name"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="0dp"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingRight="20dp"
                    android:text="0000001"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="388dp"
                    android:layout_height="36dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color"
                    android:gravity="right|center"
                    android:paddingRight="10dp">


                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_clock"
                        android:backgroundTint="@color/white" />

                    <TextView
                        android:id="@+id/date_seen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt1"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="0dp"
                        android:fontFamily="sans-serif-condensed"
                        android:paddingRight="10dp"
                        android:text="05:59"
                        android:textColor="@color/white"
                        android:textSize="18sp" />


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="105dp"
                        android:background="@drawable/ic_calendar"
                        android:backgroundTint="@color/white" />

                    <TextView
                        android:id="@+id/dateComm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="0dp"
                        android:fontFamily="sans-serif-condensed"
                        android:paddingRight="10dp"
                        android:text="30-12-2020"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>