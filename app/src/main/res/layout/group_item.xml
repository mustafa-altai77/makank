<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="6dp"
                    android:background="@color/color"
                    android:layout_alignParentRight="true"
                    android:layout_height="match_parent">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="6dp"
                    android:background="@color/color"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true">
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="sdsdsdsd"
                    android:textColor="@color/cardview_dark_background"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_alignParentRight="true"
                    android:paddingRight="10dp"
                    android:id="@+id/personInGroup"
                    />
                <ImageView
                    android:id="@+id/phoneSeen"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/ic_phone_forwarded_black_24dp"
                    android:backgroundTint="@color/total2" />
            <!--    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="0000001"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_alignParentRight="true"
                    android:paddingRight="20dp"
                    android:id="@+id/idPerson"
                    android:layout_below="@+id/personInGroup"
                    android:textSize="18sp" -->
                    />
                <LinearLayout
                    android:layout_width="358dp"
                    android:background="@color/total2"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:layout_height="36dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/statusofPerson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/effected"
                        android:textSize="18sp"
                        android:textColor="@color/white" />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/status_mgG"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/red" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>