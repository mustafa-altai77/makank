<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layoutDirection="inherit"
    android:background="@drawable/card_button"
    android:padding="5dp"
    tools:context=".ui.activity.CityActivity">

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/maare"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:drawableTint="@color/total2"
        android:cursorVisible="false"
        android:textColorHint="@color/color3"
        android:background="@drawable/rounded_edittext"
        android:drawableRight="@drawable/ic_search_black_24dp"
        android:hint="@string/searchCity" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/city_recycler"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="2dp"
        android:padding="10dp" />
</LinearLayout>
