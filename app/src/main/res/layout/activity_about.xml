<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:layoutDirection="inherit"
    android:padding="10dp"
    tools:context=".ui.activity.About"
    >
    <LinearLayout
        android:id="@+id/layoutDialog"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textTitle"
            android:background="@drawable/title_error_background"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/about_app"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:id="@+id/id1"
            android:layout_height="wrap_content"
            android:text="@string/phoneNumber"
            android:textColor="@color/total2"
            android:textSize="18sp"
            />
        <View
            android:layout_width="wrap_content"
            android:background="@color/total1"
            android:layout_marginTop="5dp"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/layout_kh"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/url_site"
                android:gravity="center"
                android:id="@+id/id2"
                android:textColor="@color/total2"
                android:textSize="18sp"
                />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:background="@color/total1"
            android:layout_marginTop="5dp"
            android:layout_height="0.5dp"/>
        <TextView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/id3"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="@color/total2"
            android:text="@string/url_email"
            />
        <View
            android:layout_width="wrap_content"
            android:background="@color/total1"
            android:layout_marginTop="5dp"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:id="@+id/layout_su"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/version_number"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/total2"
                android:id="@+id/id4"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>