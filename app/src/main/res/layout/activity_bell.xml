<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="inherit"
    android:orientation="vertical"
    android:background="@drawable/card_button"
    tools:context=".ui.activity.SendNotifActivity">
    <include layout="@layout/custom_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/total2"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:id="@+id/infoNoti"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="@string/info_notification" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#B9A636"
        android:layout_height="3dp">
</LinearLayout>
    <EditText
        android:id="@+id/disc_status"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext"
        android:gravity="right"
        android:inputType="text"
        android:padding="5dp"
        android:textAlignment="center"
        android:ems="10"
        android:hint="@string/disc_case"
        android:textColorHint="#8B8686"
        android:textColor="#4D4646"
        tools:ignore="RtlCompat" />

    <EditText
        android:id="@+id/area_Edit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext"
        android:textAlignment="center"
        android:inputType="text"
        android:textColorHint="#8B8686"
        android:padding="5dp"
        android:textColor="#4D4646"
        android:hint="@string/area">
    </EditText>
    <TextView
        android:id="@+id/LocationID"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/cardview_dark_background"
        android:text="@string/send_location"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:layout_height="wrap_content">
    </TextView>
    <ImageView
        android:id="@+id/location_image"
        android:background="@drawable/map"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="70dp"
        android:layout_height="70dp">

    </ImageView>

    <Button
        android:id="@+id/send_notification"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:background="@drawable/redbtn"
        android:text="@string/send"
        android:textColor="@color/cardview_light_background">

    </Button>

</LinearLayout>